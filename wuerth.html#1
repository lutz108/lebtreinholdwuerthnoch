<body>

<div class="container">
    <div class="clickable-text" onclick="checkStatus()">lebt Reinhold Würth noch?</div>
    <div id="result"></div>
    <div id="date-info" class="date-info"></div>
</div>

<script>
    async function checkStatus() {
        const resultDiv = document.getElementById('result');
        const dateInfo = document.getElementById('date-info');
        
        resultDiv.innerText = "Abfrage läuft...";
        dateInfo.innerText = "";

        //const url = `https://de.wikipedia.org/w/api.php?action=parse&page=Reinhold_Würth&prop=wikitext&format=json&origin=*`;
        const url = `https://de.wikipedia.org/w/api.php?action=parse&page=Reinhold_Würth&prop=wikitext&format=json&origin=*`;

        try {
            const response = await fetch(url);
            const data = await response.json();
            const wikitext = data.parse.wikitext["*"];

            // Regex Erklärung:
            // STERBEDATUM\s*=\s* -> Sucht nach "STERBEDATUM =", ignoriert Leerzeichen
            // ([^|}\n]+)             -> Sucht nach Inhalten, die KEIN | } oder Zeilenumbruch sind
            const deathMatch = wikitext.match(/STERBEDATUM\s*=\s*([^|}\n]+)/i);

            // Wir prüfen, ob ein Match existiert UND ob er nicht nur aus Leerzeichen besteht
            const deathDate = deathMatch ? deathMatch[1].trim() : "";

            if (deathDate !== "") {
                resultDiv.innerText = "zum Glück nicht mehr";
                resultDiv.style.color = "#e74c3c";
                dateInfo.innerText = "Verstorben am: " + deathDate;
            } else {
                resultDiv.innerText = "leider ja";
                resultDiv.style.color = "#27ae60";
                dateInfo.innerText = "Kein Sterbedatum in den Personendaten hinterlegt.";
            }

        } catch (error) {
            resultDiv.innerText = "Fehler";
            dateInfo.innerText = "Wikipedia konnte nicht geladen werden.";
            console.error(error);
        }
    }
</script>

</body>
</html>
